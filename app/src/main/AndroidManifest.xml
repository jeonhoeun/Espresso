<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hejeon.espresso">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".dialoginput.DialogInputActivity"/>
        <activity android:name=".cameraintent.CameraActivity" />
        <activity android:name=".intenttest.PickImageActivity" />
        <activity android:name=".fragmenttest.FragmentTestActivity" />
        <activity android:name=".basictest.SecondActivity" />
        <activity android:name=".basictest.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>